{
    "manifest_version": 3,
    "name": "HTML to IVX - by ivx.cn",
    "description": "Import a web page to IVX Components",
    "version": "0.0.1",
    "action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.mjs",
        "type": "module"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs"
    ]
}